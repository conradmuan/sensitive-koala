{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["es2019", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "paths": {
      "src/*": ["./src/*"],
      "*": ["node_modules/*"]
    },
    "target": "es6"
  },
  "include": ["src/**/*"]
}
